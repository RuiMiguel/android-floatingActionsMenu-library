<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/floating_actions_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <RelativeLayout
      android:id="@+id/floating_actions_overlay"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="#dd989e98"
      android:visibility="invisible"
      >

    <ImageView
        android:id="@+id/floating_actions_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@android:drawable/presence_audio_away"
        />
  </RelativeLayout>

  <RelativeLayout
      android:id="@+id/floating_actions_menu"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_marginBottom="@dimen/fab_margin_bottom"
      >

    <RelativeLayout
        android:id="@+id/floating_actions_submenu_horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fab_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        >
      <View
          android:id="@+id/fake_menu_button_submenu_horizontal"
          android:layout_width="@dimen/fab_width"
          android:layout_height="@dimen/fab_height"
          android:layout_centerHorizontal="true"
          />
      <ImageView
          android:id="@+id/floating_action_button_search"
          android:layout_width="@dimen/fab_width_mini"
          android:layout_height="@dimen/fab_height_mini"
          android:layout_centerVertical="true"
          android:layout_marginRight="29dp"
          android:layout_toLeftOf="@id/fake_menu_button_submenu_horizontal"
          android:src="@drawable/ic_fab_search"
          />
      <ImageView
          android:id="@+id/floating_action_button_notifications"
          android:layout_width="@dimen/fab_width_mini"
          android:layout_height="@dimen/fab_height_mini"
          android:layout_centerVertical="true"
          android:layout_marginLeft="29dp"
          android:layout_toRightOf="@id/fake_menu_button_submenu_horizontal"
          android:src="@drawable/ic_fab_notifications"
          />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/floating_actions_submenu_fan"
        android:layout_width="450dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        >
      <View
          android:id="@+id/fake_menu_button_submenu_fan"
          android:layout_width="@dimen/fab_width_mini"
          android:layout_height="@dimen/fab_height_mini"
          android:layout_alignParentBottom="true"
          android:layout_centerHorizontal="true"
          />
      <ImageView
          android:id="@+id/floating_action_button_light"
          android:layout_width="@dimen/fab_width"
          android:layout_height="@dimen/fab_height"
          android:layout_alignParentBottom="true"
          android:layout_marginBottom="48dp"
          android:layout_marginRight="50dp"
          android:layout_toLeftOf="@+id/fake_menu_button_submenu_fan"
          android:src="@drawable/ic_fab_light"
          />
      <ImageView
          android:id="@+id/floating_action_button_heart"
          android:layout_width="@dimen/fab_width"
          android:layout_height="@dimen/fab_height"
          android:layout_above="@id/floating_action_button_light"
          android:layout_marginBottom="13dp"
          android:layout_toLeftOf="@id/fake_menu_button_submenu_fan"
          android:src="@drawable/ic_fab_heart"
          />
      <ImageView
          android:id="@+id/floating_action_button_smile"
          android:layout_width="@dimen/fab_width"
          android:layout_height="@dimen/fab_height"
          android:layout_alignParentBottom="true"
          android:layout_marginBottom="48dp"
          android:layout_marginLeft="50dp"
          android:layout_toRightOf="@+id/fake_menu_button_submenu_fan"
          android:src="@drawable/ic_fab_smile"
          />
      <ImageView
          android:id="@+id/floating_action_button_thunder"
          android:layout_width="@dimen/fab_width"
          android:layout_height="@dimen/fab_height"
          android:layout_above="@id/floating_action_button_smile"
          android:layout_marginBottom="13dp"
          android:layout_toRightOf="@id/fake_menu_button_submenu_fan"
          android:src="@drawable/ic_fab_thunder"
          />
    </RelativeLayout>

    <ImageView
        android:id="@+id/floating_action_menu_button"
        android:layout_width="@dimen/fab_width"
        android:layout_height="@dimen/fab_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_fab_menu_red"
        />
  </RelativeLayout>
</RelativeLayout>
